<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/ic_background_blur">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/textView_login_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="sans-serif"
            android:text="Please enter your details to Login on UPB Maps"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_login_email"
            android:layout_below="@id/textView_login_head"
            android:text="Email"
            android:textColor="@android:color/white"
            android:padding="6dp"
            android:textSize="16sp"
            android:layout_marginTop="0dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_login_email"
            android:hint="Enter your email"
            android:background="@drawable/rounded_edit_text"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@id/textView_login_email"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_login_password"
            android:layout_below="@id/editText_login_email"
            android:text="Password"
            android:textColor="@android:color/white"
            android:padding="6dp"
            android:textSize="16sp"
            android:layout_marginTop="0dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginLeft="350dp"
            android:id="@+id/imageView_show_hide_password"
            android:layout_below="@id/textView_login_password"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_login_password"
            android:hint="Enter your password"
            android:layout_marginRight="40dp"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:padding="6dp"
            android:layout_below="@id/textView_login_password"
            android:background="@drawable/rounded_edit_text"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:id="@+id/button_login"
            android:layout_below="@id/editText_login_password"
            android:layout_marginTop="40dp"
            android:text="LogIn"
            android:background="@drawable/rounded_button"/>

        <TextView
            android:id="@+id/textView_forgot_password"
            android:layout_width="270dp"
            android:layout_height="25dp"
            android:layout_below="@id/button_login"
            android:layout_centerHorizontal="true"
            android:text="Forgot your password? Click here!"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:background="@drawable/transparent_background"
            android:textColor="@color/royal_blue"
            android:textSize="16sp" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:visibility="gone"/>



    </RelativeLayout>



</ScrollView>